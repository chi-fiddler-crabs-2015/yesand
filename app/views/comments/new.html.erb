<!-- partial, which was a form to create a new comment -->
<%= form_for :comment, url: comments_path do |f| %>
  <%= f.text_field :commentable_type, value: "Idea", type: 'hidden' %>
  <%= f.text_field :commentable_id, value: 1, type: 'hidden' %>
  <%= f.text_field :text %>
  <%= f.submit "New Comment" %>
<% end %>
