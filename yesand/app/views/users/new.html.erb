<h1>Sign Up</h1>
<% if @errors %>
  <% @errors.full_messages.each do |e| %>
  <p><%= e %></p>
  <% end %>
<% end %>

<%= form_for :user, url: users_path do |f| %>
  <%= f.label :username %>:
  <%= f.text_field :username %><br />

  <%= f.label :email %>:
  <%= f.email_field :email %><br />

  <%= f.label :password %>:
  <%= f.password_field :password %><br />

  <%= f.submit "Sign Up" %>
<% end %>
